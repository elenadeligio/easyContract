<ul class="pager">
    <li class="previous"><a href="/links">&larr; Zurück</a></li>
</ul>
<div class="data-form">
    <div class="row">
        <div class="col-md-12 login-form-1">
            <h2>Link bearbeiten:</h2>
            <div class="jumbotron">
                <form class="form-signin" action="<%=`/links/${link._id}/update?_method=PUT`%>" method="POST">
                    <div class="form-group">
                        <label for="inputTitle">Titel</label>
                        <input type="text" name="title" id="inputTitle" class="form-control" value="<%= link.title %>"
                            placeholder="Titel" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputUrl">URL</label>
                        <input type="text" name="url" id="inputUrl" class="form-control" value="<%= link.url %>"
                            placeholder="URL" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputLabel">Label</label>
                        <select class="form-control" name="label" id="inputLabel" placeholder="Label" autofocus>
                            <option value="Allgemein">Allgemein</option>
                            <option value="Orga">Orga</option>
                            <option value="Berater">Berater</option>
                        </select>
                    </div>
                    <br>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Änderungen speichern</button>
                </form>
            </div>
        </div>
    </div>
</div>