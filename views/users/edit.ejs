<ul class="pager">
    <li class="previous"><a href="/users">&larr; Zurück</a></li>
</ul>
<div class="data-form">
    <form class="form-signin" method="POST" action="<%=`/users/${user._id}/update?_method=PUT`%>">
        <h2 class="form-signin-heading">Benutzerdaten bearbeiten :</h2>
        <div class="jumbotron">
        <label for="inputFirstName">Vorname</label>
        <input type="text" name="first" id="inputFirstName" class="form-control" value="<%= user.name.first %>" placeholder="Vorname" autofocus>
        <label for="inputLastName">Nachname</label>
        <input type="text" name="last" id="inputLastName" class="form-control" value="<%= user.name.last %>" placeholder="Nachname">
        <label for="inputEmail">Email Addresse</label>
        <input type="email" name="email" id="inputEmail" class="form-control" value="<%= user.email %>" placeholder="Email Addresse" required>
        <label for="inputPassword">Passwort</label>
        <input type="password" name="password" id="inputPassword" class="form-control" value="<%= user.password %>" placeholder="Password" required>
        <br>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Änderungen speichern</button>
        </div>
    </form>
</div>