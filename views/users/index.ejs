<h2 class="center">Benutzer:</h2>
<div class="jumbotron">
<div>
    <a href="/users/new" class="btn btn-primary" ><i class="fa fa-plus-circle"></i> | Benutzer hinzufügen</a>
</div>
    <br>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Role</th>
        <th>Email</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach(user => { %>
    <tr>
        <td>
            <a href="<%=`/users/${user._id}`%>">
                <%= user.fullName %>
            </a>
        </td>
        <td>
            <%= user.roles %>
        </td>
        <td>
            <%= user.email %>
        </td>
        <td>
            <a href="<%=`/users/${user._id}/edit`%>" tool-tip-toggle="tooltip-demo" data-original-title="Bearbeiten">
                <i class="fa fa-pencil fa-lg" ></i>
            </a>
        </td>
        <td>
            <a href="<%=`/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Wollen Sie es wirklich löschen?')" tool-tip-toggle="tooltip-demo" data-original-title="Löschen"><i class="fa fa-trash fa-lg"></i></a>
        </td>
    </tr>
    <% }); %>
    </tbody>
</table>
</div>