<h1 class="center">Konto von <%= user.fullName %></h1>
<div class="jumbotron">
<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <td>
            <%= user.fullName %>
        </td>
    </tr>
    <tr>
        <th>Email</th>
        <td>
            <%= user.email%>
        </td>
    </tr>
    <tr>
        <th>Role</th>
        <td>
            <%= user.roles%>
        </td>
    </tr>
    <tr>
        <th>Passwort</th>
        <td>********</td>
    </tr>
</table>
<br>
<div class="form-group">
    <a href="<%=`/users/${user._id}/edit`%>" class="btn btn-primary"><i class="fa fa-pencil"></i> | Benutzerdaten bearbeiten</a>
    <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Wollen Sie es wirklich löschen?')" class="btn btn-danger"><i class="fa fa-trash"></i> | Konto löschen</a>
</div>
</div>


